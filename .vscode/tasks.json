{
	"version": "2.0.0",

	"command": "npm",
    "args": [
        "run",
        "build"
	],

	// use the standard tsc problem matcher to find compile problems
	// in the output.
	"problemMatcher": "$tsc",
	"tasks": [
		{
			"label": "npm",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"problemMatcher": "$tsc",
			"group": {
				"_id": "build",
				"isDefault": false
			}
		}
	]
}